<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f"
    tools:context="com.example.activitytest3.OneActivity">

    <TextView
        android:id="@+id/tv1"
        android:background="#ff0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World! activity one "/>

    <Button
        android:text="button one "
        android:id="@+id/one"
        android:onClick="oneclick"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="button two"
        android:id="@+id/two"
        android:onClick="twoclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"/>

    <Button
        android:onClick="go3"
        android:text="button three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:id="@+id/button2"/>
    <Button
        android:onClick="go4"
        android:text="button five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="button six"
        android:onClick="go5"
        android:id="@+id/buttonfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"/>

    <Button
        android:onClick="go7"
        android:text="Button seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:id="@+id/button3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="42dp"
        android:id="@+id/iv_imageview"/>

    <Button
        android:onClick="go8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button eight"
        android:layout_below="@+id/iv_imageview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
